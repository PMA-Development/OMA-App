<?xml version="1.0" encoding="utf-8" ?>
<mct:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
           xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
           xmlns:mct="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui"
           x:Class="OMA_App.Modals.MyTasksModal"
           CanBeDismissedByTappingOutsideOfPopup="True"
           Size="1000,400">
    <VerticalStackLayout Background="White" Padding="0,10,0,0">
        <Label Text="{Binding Title}" VerticalOptions="Center" HorizontalOptions="Center" FontSize="Large" />
        <BoxView Color="Gray" HeightRequest="2" HorizontalOptions="Fill" Margin="0,10,0,10"/>
        <Label Text="Description:" VerticalOptions="Center" HorizontalOptions="Center" />
        <Editor x:Name="editor" Text="{Binding Description}" Placeholder="Enter your response here" HeightRequest="250" MinimumWidthRequest="300"/>
        <HorizontalStackLayout Spacing="20" Padding="50,10,0,0">
            <Button Text="Complete" VerticalOptions="Center" HorizontalOptions="Start"/>
            <Button Text="Save" VerticalOptions="Center" HorizontalOptions="Start"/>
            <Button Text="Close" VerticalOptions="Center" HorizontalOptions="Start" Command="{Binding CloseCommand}"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</mct:Popup>
