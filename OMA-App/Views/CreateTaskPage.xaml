<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OMA_App.Views.CreateTaskPage"
             Title="Create Task Page"
             xmlns:models="clr-namespace:OMA_App.API"
             xmlns:vm="clr-namespace:OMA_App.ViewModels">



    <VerticalStackLayout Padding="10">
        <Label Text="Title:" />
        <Entry Text="{Binding Task.Title}" Placeholder="Enter title" />

        <Label Text="Type:" />
        <Entry Text="{Binding Task.Type}" Placeholder="Enter type" />

        <Label Text="Description:" />
        <Editor Text="{Binding Task.Description}" Placeholder="Enter description" HeightRequest="150" />
        <Label Text="User" />
        
        <Picker x:DataType="vm:CreateTaskViewModel" ItemsSource="{Binding Users}" SelectedItem="{Binding Task.User}" ItemDisplayBinding="{Binding Name}" />

        <Button HorizontalOptions="Center" Margin="0,20" WidthRequest="150" Command="{Binding CreateTaskCommand}" Text="Create" />
    </VerticalStackLayout>
</ContentPage>
