<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="OMA_App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:OMA_App"
    xmlns:pages="clr-namespace:OMA_App.Pages"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False"
    Title="OMA_App">
    
    
    <TabBar>

        <Tab Title="Windmills" Icon="windmill.svg">
            <ShellContent
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="MainPage" />
        </Tab>
        <Tab Title="Tasks" Icon="task.svg" >
            <ShellContent Title="Tasks"
                ContentTemplate="{DataTemplate pages:TasksPage}"
                Route="MainPage" />
            <ShellContent Title="My Tasks"
                ContentTemplate="{DataTemplate pages:MyTasksPage}"
                Route="MainPage" />
            <ShellContent Title="Create Task"
            ContentTemplate="{DataTemplate pages:CreateTaskPage}"
            Route="MainPage" />
        </Tab>
        <Tab Title="Login" Icon="login.svg">
            <ShellContent
                 ContentTemplate="{DataTemplate local:MainPage}"
                 Route="MainPage" />
        </Tab>
    </TabBar>
</Shell>
